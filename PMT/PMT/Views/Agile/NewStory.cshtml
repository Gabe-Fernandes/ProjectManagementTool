@using PMT.Services;
@model Story;

@{
	ViewData["Title"] = "New Story";
}

<script type="text/javascript" src="/js/Agile/newStory.js"></script>

<form asp-controller="@Str.Agile" asp-action="@Str.NewStory" id="newStoryContent" class="content-container">
  <div class="title-wrap">
    <h1>New Story</h1>
  </div>
  <div class="input-wrap">
    <label>Title:</label>
    <input asp-for="Title" type="text">
  </div>
  <div class="input-wrap">
    <label>Due:</label>
    <input asp-for="DueDate" type="date">
  </div>
  <div class="input-wrap">
    <label>Description:</label>
    <textarea asp-for="Description"></textarea>
  </div>
  <div class="btn-wrap">
    <button type="submit" class="btn">Create</button>
    <a asp-controller="@Str.Agile" asp-action="@Str.MyStories" class="btn">Back</a>
  </div>
</form>
