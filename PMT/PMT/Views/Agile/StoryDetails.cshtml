@model Story;

@{
	ViewData["Title"] = "Story Details";
}

<script type="text/javascript" src="/js/Agile/storyDetails.js"></script>

<section id="storyDetailsContent">
  <div class="info-panel toggle-read-edit">
    <div>
      <label>Reported:</label>
      <span>7/29/23</span>
    </div>
    <div>
      <label>Due:</label>
      <span class="read-data"> 8/3/23</span>
      <input class="edit-data hide" type="date">
      <img tabindex="0" class="edit-btn" src="/icons/Edit.png">
    </div>
    <div>
      <label>Resolved</label>
      <span>N/A</span>
    </div>
    <div>
      <label>Status:</label>
      <span>In Progress</span>
    </div>
  </div>

  <div class="title-wrap">
    <h1>[STORY TITLE]</h1>
  </div>

  <div class="input-field-wrap toggle-read-edit">
    <div class="top-div">
      <label>Description:</label>
      <img tabindex="0" class="edit-btn" src="/icons/Edit.png">
      <img tabindex="0" id="copyBtn" src="/icons/copy.png">
    </div>

    <div class="bot-div">
      <p class="read-data">Create the following models with validations: AppUser, Story, BugReport, Project, FileStructure, ModelPlanning, ControllerPlanning, ColorPalette, TechStack, Views, and SRS. Add EF Core migrations for all Models.</p>
      <textarea id="descriptionText" class="edit-data hide">Create the following models with validations: AppUser, Story, BugReport, Project, FileStructure, ModelPlanning, ControllerPlanning, ColorPalette, TechStack, Views, and SRS. Add EF Core migrations for all Models.</textarea>
    </div>
  </div>

  <div class="input-field-wrap toggle-read-edit">
    <div class="top-div">
      <label>Notes:</label>
      <img tabindex="0" class="edit-btn" src="/icons/Edit.png">
    </div>

    <div class="bot-div">
      <p class="read-data">Click the remove user button on the ManageUsers page.</p>
      <textarea class="edit-data hide">Click the remove user button on the ManageUsers page.</textarea>
    </div>
  </div>

  <div class="mark-as-resolved-wrap">
    <input type="checkbox">
    <label>Mark as Resolved</label>
  </div>

  <div class="btn-wrap">
    <button type="submit" class="btn">Update</button>
    <a asp-controller="agile" asp-action="MyStories" class="btn">Back</a>
  </div>

  <img tabindex="0" id="delBtn" src="/icons/Delete.png">
</section>

<section id="delStoryModal" class="screen-tint hide">
  <form method="post" asp-controller="Agile" asp-action="DeleteStory" asp-route-TBD="" class="del-story-modal">
    <h3>Are you sure you want to delete this story?</h3>
    <div class="btn-wrap">
      <button class="btn" type="submit">Delete</button>
      <button class="btn" type="button" id="delCancelBtn">Cancel</button>
    </div>
    <div class="close-btn"><img src="/icons/CloseBtn.png" tabindex="0" id="delCloseBtn" /></div>
  </form>
</section>
